issn = {0027-8424},
journal = {Proceedings of the National Academy of Sciences},
number = {51},
pages = {20820--20825},
pmid = {23213249},
title = {{F-actin buckling coordinates contractility and severing in a biomimetic actomyosin cortex}},
url = {http://www.pnas.org/cgi/doi/10.1073/pnas.1214753109},
